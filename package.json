    "chokidar": "1.6.1",
    "codelyzer": "^2.0.0-beta.4",
    "concurrently": "3.1.0",
    "copy-webpack-plugin": "4.0.1",
    "core-js": "^2.4.1",
    "css-loader": "0.26.0",
