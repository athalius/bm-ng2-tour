{
  "compilerOptions": {
    "outDir": "./",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "stripInternal": true,
    "inlineSources": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "node"
    ],

    "lib": [
      "dom",
      "es2015"
    ]
  },
  "files": [
    "./bm-ng2-tour.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
